<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeParent"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:background="#144257"
    tools:context=".controler.AddClientGeneralInfoFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#144257"
        tools:context=".controler.AddClientGeneralInfoFragment">

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientNameEt"
            android:textColorHint="#757575"
            android:textColor="#ffff"
            android:hint="@string/clientNameStr"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientAdressEt"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textColorHint="#757575"
            android:hint="@string/clientAdressStr"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientIntNumber"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textColorHint="#757575"
            android:hint="@string/clientIntNumber"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientExtNumber"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textColorHint="#757575"
            android:hint="@string/clientExtNumber"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientColonyEt"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textColorHint="#757575"
            android:hint="@string/clientColonyStr"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientCityEt"
            android:textAlignment="center"
            android:textColorHint="#757575"
            android:textColor="#ffff"
            android:hint="@string/clientCityStr"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientStateEt"
            android:textColorHint="#757575"
            android:textColor="#ffff"
            android:hint="@string/clientStateStr"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientCountryEt"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textColorHint="#757575"
            android:hint="@string/clientCountryStr"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientPostalCodeEt"
            android:layout_gravity="center_horizontal|top"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textColorHint="#757575"
            android:hint="@string/clientPostalCodeStr"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientRfcEt"
            android:textColorHint="#757575"
            android:textColor="#ffff"
            android:hint="@string/clientRfcStr"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientMail1Et"
            android:textColorHint="#757575"
            android:textColor="#ffff"
            android:hint="@string/clientMail1Str"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientMail2Et"
            android:textColorHint="#757575"
            android:textColor="#ffff"
            android:hint="@string/clientMail2Str"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientPhone1Et"
            android:textColorHint="#757575"
            android:textColor="#ffff"
            android:hint="@string/clientPhone1Str"
            android:textAlignment="center"
            android:inputType="phone"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientPhone2Et"
            android:textColorHint="#757575"
            android:textColor="#ffff"
            android:hint="@string/clientPhone2Str"
            android:textAlignment="center"
            android:inputType="phone"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientContact1Et"
            android:textColorHint="#757575"
            android:textColor="#ffff"
            android:hint="@string/clientContact1Str"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientContact2Et"
            android:textColorHint="#757575"
            android:textColor="#ffff"
            android:hint="@string/clientContact2Str"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="480dp"
            android:layout_height="60dp"
            android:background="@drawable/roundedshadow_et"
            android:id="@+id/clientInBetweenStreets"
            android:textColorHint="#757575"
            android:textColor="#ffff"
            android:hint="@string/inBetweenStreets"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"/>

    </LinearLayout>

    </ScrollView>
    <de.halfbit.fabuless.FabView
        android:id="@+id/fab"
        android:enabled="false"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:paddingTop="3dp"
        android:src="@mipmap/save"
        htext:fabuless_attachTo="@id/relativeParent"
        htext:fabuless_attachAt="bottom_right"
        htext:fabuless_attachType="inside"
        htext:fabuless_size="normal"
        htext:fabuless_padding="16dp"
        htext:elevation = "6dp"
        htext:fabuless_revealAfterMs="500"
        />
</RelativeLayout>
