<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/payment_id"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        tools:ignore="RelativeOverlap"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"/>


    <TextView
        android:id="@+id/payment_amount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/payment_balance"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="230dp"
        android:layout_marginStart="230dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/cancel_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cancelred"
        android:contentDescription="@string/todo"
        android:layout_marginLeft="330dp"
        android:layout_marginStart="330dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/payment_client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/payment_id"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/payment_client_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/payment_factura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/payment_method"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp" />

</RelativeLayout>