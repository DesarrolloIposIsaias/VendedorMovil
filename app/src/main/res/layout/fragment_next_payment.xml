<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:background="#0F4057"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.admin.iposapp.controler.NextPaymentFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:id="@+id/txtViewSelectClient"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:text="Seleccionar cliente"/>

    <AutoCompleteTextView
        android:privateImeOptions="nm"
        android:imeOptions="flagNoExtractUi"
        android:layout_width="300dp"
        android:background="@drawable/roundedshadow_et"
        android:layout_height="50dp"
        android:inputType="textNoSuggestions|textUri"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:id="@+id/clientAutoCompleteTextView"
        android:hint="@string/filter"
        android:textColorHint="#FFFF"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtViewSelectClient"
        android:layout_marginTop="50dp"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/applyBtn"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Aplicar"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColor="#ffff"
        android:layout_below="@id/clientAutoCompleteTextView"
        android:layout_centerHorizontal="true"
        fbutton:buttonColor="#144257"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="#0e2e3c"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"

        />

</RelativeLayout>
