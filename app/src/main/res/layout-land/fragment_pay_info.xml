    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout4">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Saldo despues"
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/saldoDespues"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/txtSaldoDespues"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Abonos movil"
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/abonosMovil"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/txtAbonosMovil"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout5">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Dias"
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/dias"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/txtDias"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="A cuenta"
            android:textColor="#ffff"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/aCuenta"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/txtACuenta"/>

    </LinearLayout>

</LinearLayout>
