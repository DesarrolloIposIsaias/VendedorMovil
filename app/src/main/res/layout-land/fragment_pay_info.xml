<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.iposapp.controler.PayInfoFragment"
    android:background="#0F4057"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Factura"
            android:textSize="10dp"
            android:textColor="#ffff"
            android:layout_marginTop="8dp"
            android:id="@+id/factura"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/txtFactura"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Estatus"
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/estatus"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/txtEstatus"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Cobranza"
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/cobranza"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/txtCobranza"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Venta"
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/venta"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/txtVenta"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayou2"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/total"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/txtTotal"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Saldo movil"
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/saldoMovil"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/txtSaldoMovil"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout3">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Pago actual"
            android:textColor="#ffff"
            android:textSize="10dp"
            android:layout_marginTop="8dp"
