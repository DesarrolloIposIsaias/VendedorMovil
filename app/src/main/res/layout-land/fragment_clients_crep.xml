<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".controler.ClientsCrepFragment"
    android:visibility="visible"
    >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:background="#144257"
        android:id="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp">

        <AutoCompleteTextView
            android:privateImeOptions="nm"
            android:imeOptions="flagNoExtractUi"
            android:layout_width="300dp"
            android:background="@drawable/roundedshadow_et"
            android:layout_height="40dp"
            android:inputType="textNoSuggestions|textUri"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:id="@+id/crepAutoCompleteTextView"
            android:hint="@string/filter"
            android:textColorHint="#FFFF"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"/>

        <info.hoang8f.widget.FButton

            android:id="@+id/filterCrepBtn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/search"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:layout_below="@id/crepAutoCompleteTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            fbutton:buttonColor="#144257"
            fbutton:cornerRadius="5dp"
            fbutton:shadowColor="#0e2e3c"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp" />

        <com.hanks.htextview.HTextView
            android:id="@+id/tvTotalBalance"
            android:foregroundGravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#144257"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            htext:animateType="anvil"
            android:textAlignment="center"
            android:imeOptions="actionDone"
            android:layout_above="@+id/tvPrice"/>

        <com.hanks.htextview.HTextView
            android:id="@+id/tvTotalPartialPayments"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#144257"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            htext:animateType="anvil"
            android:textAlignment="center"
            android:imeOptions="actionDone"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:longClickable="true"
            android:id="@+id/lvCreps"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
