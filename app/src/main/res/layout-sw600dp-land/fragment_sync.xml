<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.admin.iposapp.controler.SyncFragment">

    <!-- TODO: Update blank fragment layout -->

    <View android:id="@+id/fakeView"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_centerInParent="true"
          android:layout_centerVertical="true"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SUBIR"
        android:gravity="bottom"
        android:paddingBottom="30dp"
        android:paddingTop="20dp"
        android:textSize="46sp"
        android:id="@+id/uploadBtn"
        android:layout_gravity="center_horizontal|top"
        android:background = "@drawable/whitesquarebutton"
        android:textAlignment="center"
        android:textColor="#144257"
        android:drawableTop="@mipmap/ic_upload"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/uploadBtn"
        android:visibility="gone"
        >
    </ProgressBar>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DESCARGAR"
        android:gravity="bottom"
        android:paddingBottom="70dp"
        android:paddingTop="20dp"
        android:textSize="46dp"
        android:id="@+id/downloadBtn"
        android:layout_gravity="center_horizontal|top"
        android:background = "@drawable/bluesquarebutton"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:drawableTop="@mipmap/ic_download"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/progressBar"/>




</RelativeLayout>
