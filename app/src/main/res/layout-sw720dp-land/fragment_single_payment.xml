<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.admin.iposapp.controler.SinglePaymentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#0F4057"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/linear1">

            <EditText
                android:textSize="25dp"
                android:privateImeOptions="nm"
                android:layout_marginTop="30dp"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textNoSuggestions|textUri"
                android:layout_width="570dp"
                android:layout_height="80dp"
                android:id="@+id/client"
                android:background="@drawable/roundedshadow_et"
                android:textColorHint="#ffff"
                android:textColor="#ffff"
                android:textAlignment="center"
                android:layout_marginLeft="30dp"
                android:hint="Cliente" />

            <Spinner
                android:textSize="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="65dp"
                android:layout_width="570dp"
                android:layout_height="80dp"
                android:id="@+id/deposit"
                android:background="@drawable/roundedshadow_et"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/linear2"
            android:layout_below="@+id/linear1">

            <EditText
                android:textSize="25dp"
                android:privateImeOptions="nm"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textNoSuggestions|textUri"
                android:layout_width="570dp"
                android:layout_height="80dp"
                android:id="@+id/monto"
                android:background="@drawable/roundedshadow_et"
                android:textColorHint="#ffff"
                android:textColor="#ffff"
                android:textAlignment="center"
                android:hint="Monto"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"/>

            <Spinner
                android:textSize="25dp"
                android:layout_width="570dp"
                android:layout_height="80dp"
                android:id="@+id/payForm"
                android:background="@drawable/roundedshadow_et"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="65dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/linear3"
            android:layout_below="@+id/linear2"
            android:orientation="horizontal">

            <Spinner
                android:textSize="25dp"
                android:layout_width="570dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/bank"
                android:background="@drawable/roundedshadow_et"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_marginTop="30dp"/>

            <EditText
                android:textSize="25dp"
                android:privateImeOptions="nm"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="65dp"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textNoSuggestions|textUri"
                android:layout_width="570dp"
                android:layout_height="80dp"
                android:id="@+id/reference"
                android:background="@drawable/roundedshadow_et"
                android:textColorHint="#ffff"
                android:textColor="#ffff"
                android:textAlignment="center"
                android:hint="Referencia"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/linear4"
            android:layout_below="@+id/linear3">
            <EditText
                android:textSize="25dp"
                android:privateImeOptions="nm"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textNoSuggestions|textUri"
                android:layout_width="570dp"
                android:layout_height="80dp"
                android:id="@+id/notes"
                android:background="@drawable/roundedshadow_et"
                android:textColorHint="#ffff"
                android:textColor="#ffff"
                android:textAlignment="center"
                android:hint="Notas"/>
        </LinearLayout>


    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:background="#144257"
        android:layout_height="60dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/top_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <info.hoang8f.widget.FButton
                android:textSize="25dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                fbutton:buttonColor="#144257"
                fbutton:shadowColor="#000"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"
                android:textColor="#ffff"
                android:textAlignment="center"
                android:text="Aplicar"
                android:id="@+id/btnApply"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="370dp"
                />

            <info.hoang8f.widget.FButton
                android:textSize="25dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                fbutton:buttonColor="#144257"
                fbutton:shadowColor="#000"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"
                android:textColor="#ffff"
                android:textAlignment="center"
                android:text="Cancelar"
                android:id="@+id/btnCancel"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
