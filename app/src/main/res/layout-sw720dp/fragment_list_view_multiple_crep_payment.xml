<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.admin.iposapp.controler.ListViewMultipleCrepPaymentFragment"
    android:visibility="visible">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:background="#144257"
        android:id="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#144257"
            android:id="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="23dp"
                android:text="A cuenta: "
                android:textColor="#ffff"
                android:id="@+id/monto"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text=""
                android:textSize="23dp"
                android:textColor="#ffff"
                android:id="@+id/quantity"
                />
        </LinearLayout>
        <info.hoang8f.widget.FButton
            android:id="@+id/applyBtn"
            android:textSize="19dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Aplicar"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:layout_below="@id/linearLayout"
            android:layout_centerHorizontal="true"
            fbutton:buttonColor="#144257"
            fbutton:cornerRadius="5dp"
            fbutton:shadowColor="#0e2e3c"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp" />

    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout">

        <ListView
            android:textSize="23dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:longClickable="true"
            android:id="@+id/lvCreps"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>



</RelativeLayout>
