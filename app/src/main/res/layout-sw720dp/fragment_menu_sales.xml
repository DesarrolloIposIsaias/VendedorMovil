<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View android:id="@+id/fakeView"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_centerInParent="true"
            android:layout_centerVertical="true"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="VENDER"
        android:gravity="bottom"
        android:paddingBottom="120dp"
        android:paddingTop="200dp"
        android:textSize="58sp"
        android:id="@+id/uploadBtn"
        android:layout_gravity="center_horizontal|top"
        android:background = "@drawable/bluesquarebutton"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:drawableTop="@mipmap/ic_sell"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/fakeView"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CONSULTAR VENTA"
        android:gravity="bottom"
        android:paddingBottom="120dp"
        android:paddingTop="200dp"
        android:textSize="58sp"
        android:id="@+id/toSaleGridBtn"
        android:layout_gravity="center_horizontal|top"
        android:background = "@drawable/whitesquarebutton"
        android:textAlignment="center"
        android:textColor="#144257"
        android:drawableTop="@mipmap/ic_search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/uploadBtn"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
</RelativeLayout>